<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Actvities.DonationDetails">


    <View
        android:id="@+id/view14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_background"
        app:layout_constraintBottom_toTopOf="@+id/donate_bttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="40 Days left"
        android:textColor="#9BD35A"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image" />

    <TextView
        android:id="@+id/titleadd"
        android:layout_width="368dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:text="Help our buddy get better education"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dayleft"
        app:layout_constraintTop_toBottomOf="@+id/dayleft" />

    <TextView
        android:id="@+id/user_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="By: White Hat Organization"
        android:textColor="#A8A8A8"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/titleadd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titleadd"
        app:layout_constraintTop_toBottomOf="@+id/titleadd" />

    <View
        android:id="@+id/view11"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_published"
        app:layout_constraintTop_toBottomOf="@+id/user_published" />

    <View
        android:id="@+id/view12"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/button_shape"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Target : $"
        android:textColor="#A8A8A8"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toBottomOf="@+id/view12" />

    <TextView
                android:id="@+id/target_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="99999"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/textView34"
                app:layout_constraintStart_toEndOf="@+id/textView34"
                app:layout_constraintTop_toTopOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:text="Remaining : $ "
        android:textColor="#A8A8A8"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/target_number"
        app:layout_constraintStart_toEndOf="@+id/target_number"
        app:layout_constraintTop_toTopOf="@+id/target_number" />


    <TextView
        android:id="@+id/remining_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="554"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/textView36"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintStart_toEndOf="@+id/textView36"
        app:layout_constraintTop_toTopOf="@+id/textView36"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Make learning possible for students of all ages, from pre-school to graduate school. They also provide other educational services and opportunities that help make schools more effective and more accessible to students of all backgrounds. "
        android:textColor="#A8A8A8"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view14"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView34"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <android.widget.Button
        android:id="@+id/donate_bttn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_active_"
        android:text="Donate"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/add_image"
        android:layout_width="0dp"
        android:layout_height="251dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_image" />

    <android.widget.Button
        android:id="@+id/request"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_active_"
        android:text="Make Request"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/donate_bttn"
        app:layout_constraintEnd_toEndOf="@+id/donate_bttn"
        app:layout_constraintStart_toStartOf="@+id/donate_bttn"
        app:layout_constraintTop_toTopOf="@+id/donate_bttn" />

    <android.widget.Button
        android:id="@+id/adimn_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Show the Benefit users"
        android:background="@drawable/button_active_"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/donate_bttn"
        app:layout_constraintEnd_toEndOf="@+id/donate_bttn"
        app:layout_constraintStart_toStartOf="@+id/donate_bttn"
        app:layout_constraintTop_toTopOf="@+id/donate_bttn" />

</androidx.constraintlayout.widget.ConstraintLayout>